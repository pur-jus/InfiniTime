    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake builder",
            "type": "shell",
            "command": "cmake -DARM_NONE_EABI_TOOLCHAIN_PATH=/usr/share/gcc-arm-none-eabi-10-2020-q4-major -DNRF5_SDK_PATH=/home/ju/Work/nrf-sdk/nRF5_SDK_15.3.0_59ac345 -DUSE_JLINK=1 -DNRFJPROG=/usr/bin/ -DBUILD_DFU=1 ../",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },

        },
        {
            "label": "Pinetime-app builder",
            "type": "shell",
            "command": "make -j pinetime-app",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },

        },
        {
            "label": "Pinetime-mcuboot-app builder",
            "type": "shell",
            "command": "make -j pinetime-mcuboot-app",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },

        },
        {
            "label": "Make cleaner",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },

        }
    ]
}